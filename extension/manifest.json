{
  "manifest_version": 3,
  "name": "Web Agent",
  "description": "AI powered web automation agent using Ollama.",
  "version": "1.0",
  "permissions": [
    "tabs",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "http://127.0.0.1:11434/*",
    "http://localhost:11434/*"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": [
        "youtube-redirect.js"
      ],
      "run_at": "document_start"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'unsafe-inline'; object-src 'self';"
  }
}
