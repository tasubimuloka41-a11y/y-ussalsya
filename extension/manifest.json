{
  "manifest_version": 3,
  "name": "AI Web Agent - Comet",
  "version": "1.0",
  "description": "AI powered web automation agent using Ollama",
  "permissions": [
    "tabs",
    "scripting"
  ],,
    "sidePanel"
  "host_permissions": [
    "http://127.0.0.1:11435/*"
  ],
  "action": {
    "default_title": "AI Web Agent",
"default_side_panel": "sidepanel.html"  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
"extension_pages": "script-src 'self' 'unsafe-inline'; object-src 'self'; frame-src 'self';"  }
}
