{
  "manifest_version": 3,
  "name": "AI Web Agent - Comet",
  "version": "1.0",
  "description": "AI powered web automation agent using Ollama",
  "icons": {
    "128": "icons/icon_128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "AI Web Agent",
    "default_icon": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src 'self';"
  }
}
