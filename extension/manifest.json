{
  "manifest_version": 3,
  "name": "Web Agent",
  "description": "AI powered web automation agent using Ollama",
  "version": "1.0",
  "permissions": [
    "tabs",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "http://127.0.0.1:11435/*"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'unsafe-inline'; object-src 'self';"
  }
}
